<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SITCinemax" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/Primary_light</item>
        <item name="colorOnPrimary">@color/Primary</item>
        <item name="statusBarBackground">@color/Primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/Primary</item>
        <!-- <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item> -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/Primary</item>
    </style>
    <!--- Menu Style -->
    <style name="navTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="navigationViewStyle">@style/navTheme</item>
        <!-- Text Color -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Background Color -->
        <item name="colorControlHighlight">@color/Primary_light</item>
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="sizePercent">25</item>
        <item name="android:expandableListPreferredItemPaddingLeft">10dp</item>
        <item name="paddingTopNoTitle">20dp</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <!--- Bottom Dialog -->
    <style name="BottomDialog" >
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>